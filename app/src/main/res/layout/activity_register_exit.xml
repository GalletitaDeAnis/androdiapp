<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registro de Salida"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="8dp" />

    <EditText
        android:id="@+id/exitTimeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hora de Salida"
        android:inputType="time" />

    <EditText
        android:id="@+id/exitDateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha de Salida"
        android:inputType="date" />

    <EditText
        android:id="@+id/exitLocationEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="UbicaciÃ³n" />

    <Button
        android:id="@+id/confirmExitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar Salida"
        android:layout_marginTop="16dp"
        android:layout_gravity="center" />

</LinearLayout>
