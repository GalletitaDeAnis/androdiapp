<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/employeeNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Empleado" />

    <EditText
        android:id="@+id/employeeSurnameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apellido del Empleado" />

    <EditText
        android:id="@+id/employeeIDEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="C.I." />

    <EditText
        android:id="@+id/employeePhoneEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Celular" />

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar"
        android:layout_marginTop="16dp" />
</LinearLayout>
